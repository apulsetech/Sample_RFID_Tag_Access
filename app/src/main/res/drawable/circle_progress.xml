<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%">

    <shape android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">

        <size android:width="@dimen/circle_progress_width"
            android:height="@dimen/circle_progress_height"/>

        <gradient android:angle="0"
            android:endColor="@color/circle_progress_start"
            android:startColor="@color/circle_progress_end"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>

</rotate>