<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_background"/>
            <stroke android:color="@color/button_background_stroke"
                android:width="@dimen/button_background_stroke_width"/>
            <corners android:radius="@dimen/button_background_corner"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_background_pressed"/>
            <stroke android:color="@color/button_background_pressed_stroke"
                android:width="@dimen/button_background_stroke_width"/>
            <corners android:radius="@dimen/button_background_corner"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_background_disabled"/>
            <stroke android:color="@color/button_background_disabled_stroke"
                android:width="@dimen/button_background_stroke_width"/>
            <corners android:radius="@dimen/button_background_corner"/>
        </shape>
    </item>
</selector>