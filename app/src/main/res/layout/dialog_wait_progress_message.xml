<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/wait_progress_padding"
    android:background="@drawable/bg_wait_dialog"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/wait_progress_width"
        android:layout_height="@dimen/wait_progress_height"
        android:indeterminateDrawable="@drawable/circle_progress"
        android:indeterminateDuration="1000"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wait_progress_padding"
        tools:text="Connecting..."
        android:textSize="@dimen/wait_progress_text_size"
        android:textColor="@color/wait_progress_text_color"/>

</LinearLayout>